{
  "compilerOptions": {
    "target": "es2019",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist-server",
    "sourceMap": true
  },
  "include": [
    "src/domain/**/*",
    "src/server/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}